@inherits FBase_Edit;

<div class="modal fade show" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-left: 0px; background-color: rgba(10, 10, 10, .8);">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header bg-light">
				<h5 class="modal-title">@Get_Language_Data_Field("Hiệu chỉnh")</h5>

				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="@(()=> Modal_Cancel())">
				</button>
			</div>

			@((MarkupString)r_strError)

			<EditForm Model="@m_objData">
				<div class="modal-body">
					<div class="row">
						<div class="col-lg-4">

							<div class="row mb-3">
								<div class="col-lg-11">
									<label class="form-label-info">@Get_Language_Data_Field("Số phiếu nhập")</label><br />
									<span class="form-label">@CUtility.Get_Label_Text(@m_objData.So_Phieu_Nhap_Kho, false)</span>
								</div>
							</div>

						</div>
					</div>

				</div>
			</EditForm>


			<div class="modal-body" style="padding-top: 0px !important;">
				<div class="row">
					<div class="col-lg-12">
						<div class="hstack flex-wrap gap-2 mb-3 mb-lg-0" style="float: left;">
							@if (r_objChuc_Nang.Is_Have_Add_Permission == true)
							{
								<button type="button" class="btn rounded-pill btn-primary waves-effect waves-light" @onclick="@(()=> Open_Phieu_Nhap_Edit2(0))">
									<i class="ri-add-circle-fill align-bottom me-1"></i>
									@Get_Language_Data_Field("Thêm")
								</button>
							}
						</div>
					</div>
				</div>

				<div class="row" style="margin-top: 10px;">
					<div class="col-lg-12">
						<TelerikGrid Data="@m_objData.Phieu_Nhap_Kho" Height="400px" Resizable="true" Reorderable="true" @ref="@grdData">
							<GridColumns>
								<GridCheckboxColumn SelectAll="true" CheckBoxOnlySelection="true" Width="30px"></GridCheckboxColumn>
								<GridColumn Width="30px">
									<Template Context="Phieu_Nhap_Kho">
										<button class="btn btn-link" data-bs-toggle="dropdown" aria-expanded="false">
											<i class="mdi mdi-cog-outline" style="color: purple;"></i>
										</button>
										<ul class="dropdown-menu">
											@if (r_objChuc_Nang.Is_Have_Edit_Permission == true)
											{
												<li>
													<button class="dropdown-item" type="button" @onclick="@(()=> Open_Phieu_Nhap_Edit1((Phieu_Nhap_Kho as CDM_Phieu_Nhap_Kho).Auto_ID))"><i class="ri-edit-2-line align-bottom me-1"></i> &nbsp; @Get_Language_Data_Field("Hiệu chỉnh")</button>
												</li>
											}
											@if (r_objChuc_Nang.Is_Have_Delete_Permission == true)
											{
												<li>
													<button class="dropdown-item" type="button" @onclick="@(()=> Delete_Data((Phieu_Nhap_Kho as CDM_Phieu_Nhap_Kho).Auto_ID))"><i class="ri-delete-bin-line align-bottom me-1"></i> &nbsp; @Get_Language_Data_Field("Xóa")</button>
												</li>
											}
										</ul>
									</Template>
								</GridColumn>
								<GridColumn Title="Sản phẩm" Width="150px">
									<Template>
										@CUtility.Get_Label_Text(CCache_San_Pham.Get_Data_By_ID((context as CDM_Phieu_Nhap_Kho).San_Pham_ID)?.Ten_San_Pham, false)
									</Template>
								</GridColumn>
								<GridColumn Field="SL_Nhap" Title="Số lượng nhập" Width="250px"></GridColumn>
								<GridColumn Field="Don_Gia_Nhap" Title="Đơn giá nhập" Width="200px"></GridColumn>
								<GridColumn Field="" Title=""><FooterTemplate></FooterTemplate></GridColumn>
							</GridColumns>
						</TelerikGrid>
					</div>
				</div>
			</div>

			<div class="modal-footer">

			</div>
		</div>
	</div>
</div>

@if (m_blIs_Show_Edit_Phieu_Nhap1 == true)
{
	<F7001_4_A_Phieu_Nhap_Edit p_iNhap_Kho_ID="@r_iAuto_ID" p_iPhieu_Nhap_Kho_ID="@m_iPhieu_Nhap_Kho_ID" OnClose="@Close_Function1"></F7001_4_A_Phieu_Nhap_Edit>
}



@code {
	private CDM_Nhap_Kho m_objData = new();
	private CDM_Phieu_Nhap_Kho m_objData_Phieu_Nhap = new();
	TelerikGrid<CDM_Phieu_Nhap_Kho> grdData = new();
	private CDM_San_Pham m_objData_San_Pham = new();
	//start form Edit con
	private long m_iPhieu_Nhap_ID { get; set; } = 0;
	private long m_iPhieu_Nhap_Kho_ID { get; set; } = 0;
	private bool m_blIs_Show_Edit_Phieu_Nhap1 { get; set; } = false;
	private bool m_blIs_Show_Edit_Phieu_Nhap2 { get; set; } = false;
	//End form Edit con

	protected override void Init_Data()
	{
		Format_Grid(grdData);
		CDM_Nhap_Kho_Controller v_objCtrData = new();
		m_objData_San_Pham = CCache_San_Pham.Get_Data_By_ID(m_objData_Phieu_Nhap.San_Pham_ID);
	}

	protected override void Load_Data()
	{
		Format_Grid(grdData);
		CDM_Nhap_Kho_Controller v_objCtrData = new();
		CDM_Phieu_Nhap_Kho_Controller v_objCtrlPhieu_Nhap = new();
		m_objData = v_objCtrData.FQ_718_NK_sp_sel_Get_By_ID(r_iAuto_ID);

		r_bUpdate = true;
		m_objData.Phieu_Nhap_Kho = v_objCtrlPhieu_Nhap.F7001_sp_sel_List_By_Nhap_Kho_ID(m_objData.Auto_ID);

		// Đoạn code lưu key cho việc tracking log CRUD, vui lòng đừng xóa
		CSys_API_Source v_objClone = new();
		CUtility.Clone_Entity(m_objData, v_objClone);
		r_objSource = v_objClone;
		// End tracking

		
		Hide_Pageable(grdData);
	}

	protected override void Delete_Data_Entry(long p_iAuto_ID)
	{
		CDM_Phieu_Nhap_Kho_Controller v_objCtrData = new();

		// Đoạn code lưu key cho việc tracking log CRUD, vui lòng đừng xóa
		CDM_Phieu_Nhap_Kho v_objData = v_objCtrData.FQ_719_NKRD_sp_sel_Get_By_ID(p_iAuto_ID);
		// if (v_objData != null)
		// 	r_strDelete_Key = v_objData.Nhap_Kho_ID.ToString();
		// End tracking

		v_objCtrData.FQ_719_NKRD_sp_del_Delete_By_ID(p_iAuto_ID, r_strActive_User_Name, r_strActive_Function_Code);
		CCache_Nhap_Kho.Load_Cache_Nhap_Kho();
		CCache_Phieu_Nhap_Kho.Load_Cache_Phieu_Nhap_Kho();
	}


	#region form Edit con

	protected void Open_Phieu_Nhap_Edit1(long p_iAuto_ID)
	{
		r_strError = "";
		m_iPhieu_Nhap_Kho_ID = p_iAuto_ID;
		m_blIs_Show_Edit_Phieu_Nhap1 = true;
		StateHasChanged();
	}

	private void Close_Function1(CEvent_Call_Back p_obj)
	{
		if (p_obj.Message_ID != (int)EModal_Result.Exception)
		{
			m_blIs_Show_Edit_Phieu_Nhap1 = false;
			Load_Data_Init();
		}
	}

	protected void Open_Phieu_Nhap_Edit2(long p_iAuto_ID)
	{
		r_strError = "";
		m_iPhieu_Nhap_Kho_ID = p_iAuto_ID;
		m_blIs_Show_Edit_Phieu_Nhap1 = true;
		StateHasChanged();
	}

	private void Close_Function2(CEvent_Call_Back p_obj)
	{
		if (p_obj.Message_ID != (int)EModal_Result.Exception)
		{
			m_blIs_Show_Edit_Phieu_Nhap1 = false;
			Load_Data_Init();
		}
	}

	#endregion form Edit con
}
